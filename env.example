# 文件管理系统环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# 基本配置
ENV=production
ROOT_DIR=/path/to/your/files
APP_NAME=文件管理系统

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8888
DEBUG_MODE=false
TEMPLATES_AUTO_RELOAD=false

# 安全配置
SECRET_KEY=your-secret-key-here
ENABLE_DOWNLOAD=true
ENABLE_DELETE=true
ENABLE_UPLOAD=true
ENABLE_CREATE_FOLDER=true
ENABLE_RENAME=true
ENABLE_MOVE_COPY=true
ENABLE_FILE_OPS=true

# 文件限制
MAX_CONTENT_LENGTH=53687091200
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=file_manager.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 前端配置
DEFAULT_VIEW=list
PAGE_SIZE=20
SHOW_HIDDEN=false
ENABLE_DRAG_DROP=true
ENABLE_PREVIEW=true

# 权限配置
PERMISSION_UPLOAD=true
PERMISSION_DOWNLOAD=true
PERMISSION_DELETE=true
PERMISSION_RENAME=true
PERMISSION_CREATE_FOLDER=true
PERMISSION_ADMIN_OPS=false

# 性能配置
STATIC_COMPRESS=true
SEND_FILE_MAX_AGE_DEFAULT=3600
RATE_LIMIT=100 per minute
SESSION_TIMEOUT=3600
